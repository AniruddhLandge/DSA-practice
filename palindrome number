#include <iostream>
using namespace std;
int main(){
    int num ;
    cout<<"Enter the number: ";
    cin>>num;
    int temp = num;
    int rem=0,rev=0;
    while(num>0){
        rem = num % 10;
        rev = (rev*10)+rem;
        num = num/10;
    }
    if(temp==rev){
        cout<<"The number is plaindrome";
    }else{
        cout<<"The number is not plaindrom";
    }
    return 0;
}
