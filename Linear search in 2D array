#include<iostream>
using namespace std;
int main(){
    int arr[4][3];
      int rows = 4;
      int cols = 3;
      int target = 8;
      cout<<"Enter the numbers: ";
    for(int i=0; i<rows; i++){
       for(int j=0; j<cols; j++){
        cin>>arr[i][j];
       }
    }
    for(int i=0; i<rows; i++){
       for(int j=0; j<cols; j++){
        cout<<arr[i][j]<<" ";
       }
       cout<<endl;
    }

    for(int i=0; i<rows; i++){
        for(int j=0; j<cols; j++){
            if(arr[i][j] == target){
               cout<<"row "<<i<<" and column "<<j;
            }
            else{
                cout<<"The element is not found";
            }
        }
    }
    return 0;
}
